{
  "name": "@spearui/root",
  "version": "0.0.0",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -pv --topological-dev run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "version:bump": "yarn version check --interactive && yarn version apply --all",
    "react:start": "yarn workspace @spearui/react run dev",
    "svelte:start": "yarn workspace @spearui/svelte run dev",
    "vue:start": "yarn workspace @spearui/vue run dev",
    "lit:start": "yarn workspace @spearui/web-components run dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2"
  }
}
